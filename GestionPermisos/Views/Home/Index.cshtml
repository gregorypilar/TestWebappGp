@{
    ViewData["Title"] = "Home Page";
}

<div id="app">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Asignacion de Permisos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Permisos</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">

        @*Asignacion de permisos*@
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Permiso</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">
                            <button class="btn btn-sm"><i class="fa fa-plus"></i> Agregar</button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in asignacionPermisos" :key="data.id">
                        <th scope="row">{{data.id}}</th>
                        <td>{{data.nombreEmpleado}}</td>
                        <td>{{data.apellidoEmpleado}}</td>
                        <td>{{data.permisoDescripcion}}</td>
                        <td>{{data.fechaPermiso}}</td>
                        <td>
                            <button type="button" class="btn"><i class="fa fa-edit"></i></button>
                            <button type="button" class="btn"><i class="fa fa-remove"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


        @*Permisos*@
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">
                            <button class="btn btn-sm"><i class="fa fa-plus"></i> Agregar</button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in permisos" :key="data.id">
                        <th scope="row">{{data.id}}</th>
                        <td>{{data.descripcion}}</td>
                        <td>
                            <button type="button" class="btn"><i class="fa fa-edit"></i></button>
                            <button type="button" class="btn"><i class="fa fa-remove"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>

    </div>


    @*Modales*@

    @*Permiso*@
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts{
    <script src="~/js/app.js" asp-append-version="true"></script>
}
